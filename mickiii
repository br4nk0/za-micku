    <script>
        function odaberiOdgovor(odgovor) {
            if (odgovor === 'naravno') {
                prikaziSmajlije();
            } else if (odgovor === 'nou') {
                prikaziTuzniSmajli();
            }
        }

        function prikaziSmajlije() {
            let smajliji = ['üòä', 'üòç', 'üòò', 'üòÇ', '‚ù§Ô∏è', 'üåπ', 'üçΩÔ∏è'];
            smajliji.forEach(smajli => {
                const novoSmajli = document.createElement('div');
                novoSmajli.innerText = smajli;
                novoSmajli.classList.add('smajli');
                novoSmajli.style.left = `${Math.random() * window.innerWidth}px`;
                document.body.appendChild(novoSmajli);
            });
        }

        function prikaziTuzniSmajli() {
            document.getElementById('odgovori-container').style.display = 'none';
            const tuzniSmajli = document.createElement('div');
            tuzniSmajli.innerHTML = '<p>E NISTA SAD</p>:(</div>';
            document.getElementById('pitanje-container').appendChild(tuzniSmajli);
        }
    </script>
